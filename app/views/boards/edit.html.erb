<!-- BOARD TITLE EDIT FORM -->
<div class="w3-container">
    <div class="w3-section w3-bottombar w3-padding-16">
        <div class="w3-center w3-margin-top">
            <%= flash[:errors] %>
            <%= form_for @board do |f| %>
                <%= f.label :title, "Update ", class: "w3-jumbo w3-margin-top"%>
                <%= f.text_field :title, style: "width: 30%", class: "w3-jumbo w3-center"  %><br><br>
                <%= f.submit "Update Board", class: "green-outline w3-left" %>
                <%= link_to "Delete Board", delete_board_path(@board), method: :delete, data: {confirm: "Are you sure? This cannot be undone."} , class: "full-red w3-right" %>
            <% end %>
            <br><br>
        </div>
    </div>
</div>

<!-- PIN EDIT FORMS -->

<div class="w3-row-padding">
    <% @board.pins.each do |p| %>  
        <div class="w3-col l4 w3-margin-bottom">
            <div class="w3-card-4">
                <div class="w3-container">
                    <h3 class="w3-center idx-card-titles"><%= link_to "#{p.car.owner.first_name}", user_path(p.car.owner)%>'s <%= link_to "#{p.car.year} #{p.car.make} #{p.car.model}", car_path(p.car)%></h3>
                    <div class='idx-ctn img-ctn' >
                        <%= image_tag p.car.images.first, style: "width: 100%", class: "w3-margin-bottom" if p.car.images.attached? %>
                    </div>
                    <%= form_for p do |f| %>
                        <%= f.text_field :note, class: "w3-input w3-border" %><br>
                        <%= f.submit "Update Pin", class: "pin-btn green-outline"%><br>
                    <% end %>
                    <%= link_to "Delete Pin", delete_pin_path(p), method: :delete, data: {confirm: "Are you sure?"},  class: "pin-btn full-red w3-center" %>
                </div><br>
            </div>`
        </div>
    <% end %>
</div>


