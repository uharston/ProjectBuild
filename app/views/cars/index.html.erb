<!-- CARS INDEX -->
<div class="w3-row-padding">
  <% @cars.each do |c| %>  
    <div class="w3-col l4 w3-margin-bottom">
      <div class="w3-card-4">
        <div class="w3-container">
          <h3 class="w3-center"><%= link_to "#{c.owner.first_name}", user_path(c.owner)%>'s <%= link_to "#{c.year} #{c.make} #{c.model}", car_path(c)%></h3>
          <div class='idx-ctn img-ctn' >
            <%= image_tag c.images.first, style: "width: 100%", class: "idx-img" if c.images.attached? %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>


